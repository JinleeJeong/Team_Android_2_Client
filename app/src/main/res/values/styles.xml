<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="TransparentStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
    </style>

    <style name="TextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/sf_pro_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="EditTextStyle" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="android:textColor">@color/colorBoldBlack</item>
        <item name="android:textColorHint">@color/colorWireFrameFont</item>
        <item name="android:fontFamily">@font/sf_pro_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="background">@null</item>
        <item name="android:textCursorDrawable">@color/colorBasketBallRed2</item>
        <item name="android:textColorHighlight">@color/colorBasketBallRed2</item>
    </style>

</resources>
